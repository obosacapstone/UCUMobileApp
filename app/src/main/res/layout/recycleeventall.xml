<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/bgbutton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#F5F5F5">
            <TextView
                android:id="@+id/eventdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#0418A5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginHorizontal="20dp"
                android:text="Event Detail"/>

            <TextView
                android:id="@+id/eventdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#CC0505"
                android:textSize="12dp"
                android:layout_marginHorizontal="20dp"
                android:text="Event date"/>

            <TextView
                android:id="@+id/dateduration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2C2C2C"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="Date Date time to date time"/>
            <ImageView
                android:id="@+id/eventimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:src="@drawable/uculogo"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Address"
                android:textColor="#2C2C2C"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Venue"
                android:textColor="#2C2C2C"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:textColor="#2C2C2C"
                android:textSize="15dp"
                android:layout_marginBottom="7dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:justificationMode="inter_word"
                android:maxLength="100"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Description"/>
            <LinearLayout
                android:id="@+id/datevalidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qinterested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are You Interested?"/>
                <Button
                    android:id="@+id/InterestedYesPlain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"/>
                <Button
                    android:id="@+id/NotinterestedYesPlain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"/>

            </LinearLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>