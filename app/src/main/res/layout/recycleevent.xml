<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/bgbutton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"

        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#F5F5F5">
        <TextView
            android:id="@+id/eventdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="#07435f"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginHorizontal="20dp"
            android:text="Event Detail"/>
            <TextView
                android:id="@+id/dateduration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:textColor="#4C4C4C"
                android:textSize="15dp"
                android:padding="2dp"
                android:layout_marginHorizontal="20dp"
                android:text="Duration date"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/eventtype"/>
                <TextView
                    android:id="@+id/eventtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#090808"
                    android:textSize="17dp"
                    android:layout_marginLeft="3dp"
                    android:text="Event Type"/>
            </LinearLayout>




            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="14dp"
                android:padding="2dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:text="Location"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:textColor="#4C4C4C"
                android:padding="2dp"
                android:textSize="14dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Qualification Qualification Qualification Qualification Qualification "/>





        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>