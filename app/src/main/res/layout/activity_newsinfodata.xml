<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newsinfodata">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/newsimagedata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/uculogo"
                android:gravity="center"/>
            <TextView
                android:id="@+id/newsdetaildata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Title Description"
                android:gravity="center"/>
            <TextView
                android:id="@+id/newstopicdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Type Description"
                android:justificationMode="inter_word"
                android:gravity="left"/>





        </LinearLayout>





    </ScrollView>

</LinearLayout>