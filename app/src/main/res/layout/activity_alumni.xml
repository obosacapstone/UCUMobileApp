<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".alumni">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mydrawer">


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationdrawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            app:itemIconTint="#07435f"
            app:itemTextAppearance="@style/TextViewStyle"
            app:menu="@menu/navdrawermenu"
            app:headerLayout="@layout/navheader"
            android:layout_gravity="start">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical"
                android:background="@drawable/register_background">
                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/Circular"
                    android:id="@+id/navprofile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/uculogo"

                    />
                <TextView
                    android:id="@+id/navfullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CRIS RAGOJOS OBOSA"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/navidno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20181464"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="#fff"
                    />

            </LinearLayout>


        </com.google.android.material.navigation.NavigationView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:background="#fff">
                            <ImageView
                                android:layout_width="0px"
                                android:layout_height="21dp"
                                android:layout_weight=".07"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="2dp"
                                android:onClick="back"
                                android:src="@drawable/back"
                                app:tint="#297fa7" />
                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight=".20"
                                android:gravity="center_vertical"
                                android:text="back"
                                android:textColor="#297fa7"
                                android:onClick="back"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/TitleCourse"
                                android:layout_width="0px"
                                android:layout_height="wrap_content"
                                android:layout_weight=".70"
                                android:background="#00000000"
                                android:layout_marginHorizontal="10dp"
                                android:paddingLeft="25px"
                                android:paddingTop="8dp"
                                android:textColor="#297fa7"
                                android:text="Title"
                                android:textStyle="bold"
                                android:gravity="left|center_vertical"
                                android:textSize="18dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textAllCaps="false" />



                        </LinearLayout>
                    </LinearLayout>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/batch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="15dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="course"
                                    android:textColor="#000"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/alumni"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:text="alumni"
                                    android:textColor="#201F1F"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/batch1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="15dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="course"
                                    android:textColor="#000"
                                    android:textSize="20dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/alumni1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:text="alumni"
                                    android:textColor="#201F1F"
                                    android:textSize="20dp"
                                    android:visibility="gone" />


                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>


                </LinearLayout>


            </LinearLayout>



            <RelativeLayout
                android:id="@+id/relativeprogress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/white_circle"
                android:elevation="8dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="gone" />

            </RelativeLayout>



        </RelativeLayout>


    </androidx.drawerlayout.widget.DrawerLayout>


</LinearLayout>