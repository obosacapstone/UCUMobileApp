<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"

        app:layout_constraintStart_toStartOf="parent">

<!--        android:id="@+id/bgbuttonnews"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/newsdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#07435f"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:text="News Detail"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".40">
                <ImageView
                    android:id="@+id/newsimage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:src="@drawable/uculogo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_weight=".60">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:id="@+id/newsimage1"
                    android:layout_weight=".333"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:src="@drawable/uculogo"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/newsimage2"
                    android:layout_weight=".333"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:src="@drawable/uculogo"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/newsimage3"
                    android:layout_weight=".333"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:src="@drawable/uculogo"
                    android:visibility="gone"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <ImageView
                        android:id="@+id/newsimage4"
                        android:layout_weight=".333"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:src="@drawable/uculogo"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/newsimage5"
                        android:layout_weight=".333"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:src="@drawable/uculogo"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/newsimage6"
                        android:layout_weight=".333"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:src="@drawable/uculogo"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <ImageView
                        android:id="@+id/newsimage7"
                        android:layout_weight=".333"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:src="@drawable/uculogo"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/newsimage8"
                        android:layout_weight=".333"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:src="@drawable/uculogo"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/newsimage9"
                        android:layout_weight=".333"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:src="@drawable/uculogo"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#4C4C4C"
                android:justificationMode="inter_word"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Description Description asda sDescription Description  asdasdas Description Description asdas Description Description  sadas Description Description  sadasd Description Description  sada"
                app:trimExpandedText="See more"
                app:trimCollapsedText="See less"
                app:colorClickableText="#A11036BC"
                app:trimMode="trimModeLength"
                app:trimLength="100"
                android:layout_marginBottom="10dp"
                />





        </LinearLayout>


    </androidx.cardview.widget.CardView>












</LinearLayout>