<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"

        app:layout_constraintStart_toStartOf="parent">

<!--        android:id="@+id/bgbuttonnews"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/newsdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#0418A5"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginHorizontal="20dp"
                android:text="News Detail"/>
            <TextView
                android:id="@+id/newsdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:layout_gravity="center"
                android:textColor="#CC0505"
                android:textSize="12dp"
                android:layout_marginHorizontal="20dp"
                android:text="News date"/>

                <TextView
                    android:id="@+id/newstopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C2C2C"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:text="News Topic"/>
            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2C2C2C"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="Category"/>


            <ImageView
                android:id="@+id/newsimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:src="@drawable/uculogo"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Address"
                android:textColor="#2C2C2C"
                android:textSize="15dp" />

            <TextView
                    android:id="@+id/venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C2C2C"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:text="Venue"/>

            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:gravity="center"
                app:trimExpandedText="See more"
                app:trimCollapsedText="See less"
                app:colorClickableText="#A11036BC"
                app:trimMode="trimModeLength"
                app:trimLength="100"

                />





        </LinearLayout>


    </androidx.cardview.widget.CardView>












</LinearLayout>